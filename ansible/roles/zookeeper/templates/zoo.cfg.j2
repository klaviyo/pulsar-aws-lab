# ZooKeeper Configuration
tickTime={{ zookeeper_tick_time }}
initLimit={{ zookeeper_init_limit }}
syncLimit={{ zookeeper_sync_limit }}
dataDir={{ zookeeper_data_dir }}
clientPort=2181
maxClientCnxns={{ zookeeper_max_client_connections }}

# Disable the per-ip limit on the number of connections
# since this is a non-production config
4lw.commands.whitelist=*

# ZooKeeper cluster servers
{% for host in groups['zookeeper'] %}
server.{{ loop.index }}={{ hostvars[host]['private_ip'] }}:2888:3888
{% endfor %}
