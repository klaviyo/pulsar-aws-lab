{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pulsar AWS Lab Infrastructure Configuration",
  "description": "Schema for EC2 infrastructure configuration",
  "type": "object",
  "required": ["experiment", "pulsar_version", "aws", "network", "compute"],
  "properties": {
    "experiment": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique experiment identifier (lowercase alphanumeric and hyphens)"
        },
        "name": {
          "type": "string",
          "description": "Human-readable experiment name"
        },
        "description": {
          "type": "string",
          "description": "Detailed experiment description"
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional AWS tags for cost tracking"
        }
      }
    },
    "pulsar_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Apache Pulsar version to install (e.g., 3.0.0, 3.1.0)"
    },
    "aws": {
      "type": "object",
      "required": ["region"],
      "properties": {
        "region": {
          "type": "string",
          "pattern": "^[a-z]{2}-[a-z]+-[0-9]$",
          "description": "AWS region (e.g., us-east-1)"
        },
        "availability_zone": {
          "type": "string",
          "description": "Specific AZ (optional, uses default if not specified)"
        },
        "use_spot_instances": {
          "type": "boolean",
          "default": false,
          "description": "Use spot instances for cost savings"
        },
        "spot_max_price": {
          "type": "string",
          "description": "Maximum spot price (e.g., '0.05')"
        }
      }
    },
    "network": {
      "type": "object",
      "required": ["vpc_cidr"],
      "properties": {
        "vpc_cidr": {
          "type": "string",
          "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
          "default": "10.0.0.0/16",
          "description": "VPC CIDR block"
        },
        "public_subnet_cidr": {
          "type": "string",
          "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
          "default": "10.0.1.0/24",
          "description": "Public subnet CIDR"
        },
        "allowed_ssh_cidrs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$"
          },
          "default": ["0.0.0.0/0"],
          "description": "CIDRs allowed for SSH access"
        }
      }
    },
    "compute": {
      "type": "object",
      "required": ["zookeeper", "bookkeeper", "broker", "client"],
      "properties": {
        "ssh_key_name": {
          "type": "string",
          "description": "AWS SSH key pair name (created separately)"
        },
        "ami_id": {
          "type": "string",
          "description": "AMI ID (uses latest Amazon Linux 2 if not specified)"
        },
        "zookeeper": {
          "$ref": "#/definitions/instanceConfig"
        },
        "bookkeeper": {
          "$ref": "#/definitions/instanceConfigWithStorage"
        },
        "broker": {
          "$ref": "#/definitions/instanceConfig"
        },
        "client": {
          "$ref": "#/definitions/instanceConfig"
        }
      }
    }
  },
  "definitions": {
    "instanceConfig": {
      "type": "object",
      "required": ["count", "instance_type"],
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of instances"
        },
        "instance_type": {
          "type": "string",
          "pattern": "^[a-z][0-9][a-z]?\\.[a-z0-9]+$",
          "description": "EC2 instance type (e.g., t3.micro, t3.small)"
        }
      }
    },
    "instanceConfigWithStorage": {
      "allOf": [
        {
          "$ref": "#/definitions/instanceConfig"
        },
        {
          "type": "object",
          "properties": {
            "storage": {
              "type": "object",
              "required": ["volume_size", "volume_type"],
              "properties": {
                "volume_size": {
                  "type": "integer",
                  "minimum": 8,
                  "description": "EBS volume size in GB"
                },
                "volume_type": {
                  "type": "string",
                  "enum": ["gp2", "gp3", "io1", "io2"],
                  "description": "EBS volume type"
                },
                "iops": {
                  "type": "integer",
                  "minimum": 100,
                  "description": "Provisioned IOPS (for io1/io2 volumes)"
                },
                "throughput": {
                  "type": "integer",
                  "minimum": 125,
                  "maximum": 1000,
                  "description": "Throughput in MB/s (for gp3 volumes)"
                }
              }
            }
          }
        }
      ]
    }
  }
}
